{
  "analysis": {

    "analyzer": {
      "booklay_analyzer": {
        "type": "custom",
        "tokenizer": "nori_with_user_dict",
        "filter": ["nori_part_of_speech","synonyms","nori_readingform","lowercase","remove_duplicates"]
      }
    },
    "tokenizer":{
      "nori_with_user_dict":{
        "type":"nori_tokenizer",
        "decompound":"mixed",
        "user_dictionary":"user_dic.txt"
      }
    },
    "filter": {
      "synonyms": {
        "type": "synonym_graph",
        "synonyms_path" : "synonyms.txt"
      },
      "nori_part_of_speech": {
        "type": "nori_part_of_speech",
        "stoptags": [
          "NR"
        ]
      }
    }
  }
}